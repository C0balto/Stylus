@import 'normalize.css'

*
   &
   &::before
   &:after
        box-sizing border-box

.grid-container
    display grid
    width 90%
    margin-left 5%
    margin-right 5%
    grid-template-columns repeat(12,7%)
    grid-template-rows repeat(10, 4%) 
    grid-gap 10px calc( (100% - 7%*12)/11 )
    color #5d7e92

.grid-container-minus
    display grid
    width 90%
    margin-left auto
    margin-right auto
    grid-template-columns repeat(12,7%)
    grid-template-rows 80px 1fr
    grid-gap 10px calc( (100% - 7%*12)/11 )

.col 1r1
    grid-column span 1
.col-2r1
    grid-column span 2
.col-3r1
    grid-column span 3
.col-4r1
    grid-column span 4
.col-5r1
    grid-column span 5
.col-6r1
    grid-column span 6
.col-7r1
    grid-column span 7
.col-8r1
    grid-column span 8
.col-9r1
    grid-column span 9
.col-10r1
    grid-column span 10
.col-2-1r1
    grid-column 2/span 1
.col-2-2r1
    grid-column 2/span 2
.col-2-3r1
    grid-column 2/span 3
.col-2-4r1
    grid-column 2/span 4
.col-2-7r1
    grid-column 2/span 7

.col-3-2r1
    grid-column 3/span 2

.col-3-3r1
    grid-column 3/span 3
.col-3-6r1
    grid-column 3/span 6

.col-3r2
    grid-column span 3
    grid-row 2

.col-12r2
    grid-column span 12
    grid-row 2

.col-3-3r2
    grid-column 3/span 3
    grid-row 2

.col-3-9r2
    grid-column 3/span 9
    grid-row 2

.art-img
    max-width 350px
    max-height 450px
    margin 5px 5px 5px 5px
    padding 5px 10px 5px 10px 
    border solid 1px grey
    text-align center
    overflow hidden


.canvas-title
    padding 0
    margin 0

.canvas
    max-width 80%
    max-height 50%
    padding 10px 30px 10px 30px
    border solid 0px purple

.canvas-mini
    max-width 35px
    padding 0 5px 0 5px


.cluster
    padding-top 100px

.cluster-footer
    padding-top 50px
    padding-bottom 50px

.fix
    position fixed
    width 100%

.marca
    float left
    width 130px
    padding 0px 5px 5px 5px
    margin-left 10px
    margin-right 3%
    min-width 130px

.midias
    display inline-block
    margin 5px 5px 5px 5px
    padding 30px 0px 10px 0px

    img 
        width 35px
        height 35px

    a:link
        filter grayscale(100%)
        transition 0.5s ease-in
    a:hover
        filter grayscale(0%)
        transition 1s ease-out
    


.nav
    display inline-block
    text-decoration none
    font-family 'verdana'
    font-weight bold 
    font-size 0.9em
    padding 45px 5px 5px 5px

    a:link
        padding-bottom 0px
        border-bottom solid 0px #303030
        color #555555
        transition 0.2s ease-out
        
    a:hover
        border-bottom solid 1px #303030
        padding-bottom 2px
        color #151c25
        transition 0.2s ease-in
        
   

.newsletter
    border-radius 5px
    width 300px


.spacer
    padding-left 40%
       
.align
    text-align center
a
    text-decoration none
    color black
ul 
   padding 0
   margin 0

header 
    background linear-gradient(#c4c4c4, #ffffff)
    margin 0
    padding 0 

p
    font-family 'verdana'
    font-size 0.8em
    padding-left 10px


footer
    background-color #c4c4c4
    height 100%

input
    &[type='text']
        border none
        padding 5px 5px 5px 5px
    &[type='submit']
        border-radius 5px
        font-family 'verdana'
        font-size 0.8em
        padding 5px 10px 5px 10px
        border none
        background-color grey
        transition 0.5s ease-out
        
        &:hover
            border-radius 10px
            background-color orange 
            transition 0.5s ease-in